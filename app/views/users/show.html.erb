<section class="section-index-users">
  <li class="user-container-single">
    <div class="user-image">
      <%= image_tag @user.photo, alt: "#{@user.name}-avatar" %>
    </div>
    <div class="user-info">
      <h3 class="username"><%= @user.name %></h3>
      <span class="post-numb">Number of posts: <%= @user.posts_counter %></span>
    </div>
  </li>

  <div class="bio-container">
    <h3 class="bio-title">Bio<h3>
    <p class="bio-text"><%= @user.bio %></p>
  </div>

  <div class="posts-container">
    <% @user.recents_post.each do |post| %>
      <%= link_to user_posts_path(@user), class: 'link-post' do %>
        
				<div class="post-container" >
    			<h3 class="post-title"><%= post.title %></h3>
  				<p class="post-text"><%= post.text.slice(0, 150) %><span class="read-more"><strong>...&nbsp;[read more]</strong></span></p>
  				<aside class="comment-like">
    				<span class="comments">Comments: <%= post.comments_counter %></span>
    				<span class="likes">
      				<%= post.likes_counter %>
    				</span>
    				
						<button class="like-btn">
    					<%= " â™¥  "%>
						</button>

  				<aside>
				</div>
      <% end %>
    <% end %>
  </div>

  <%= link_to user_posts_path(@user), class: 'link-btn' do %>
    <button type="button" class="see-all-posts-btn">
      See All Posts
    </button>
  <% end %>

</section>
