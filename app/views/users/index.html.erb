<section>
  <% @users.each do |user| %>
    <%= link_to user_path(user) do %>
      <li class="user-container">
        <div class="user-image">
        	<%= image_tag user.photo, alt: "#{user.name}-avatar" %>
        </div>
        <div class="user-info">
          <h3 class="username"><%= user.name %></h3>
          <span class="post-numb">Number of posts: <%= user.posts_counter %></span>
        </div>
      </li>
    <% end %>
  <% end %>
</section>
