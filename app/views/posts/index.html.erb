<section class="section-index-users">
	<li class="user-container-single">
    <div class="user-image">
      <%= image_tag @users.photo, alt: "#{@users.name}-avatar" %>
    </div>
    <div class="user-info">
      <h3 class="username"><%= @users.name %></h3>
      <span class="post-numb">Number of posts: <%= @users.posts_counter %></span>
    </div>
  </li>

	<%= link_to new_user_post_path do %>
    <button type="button" class="">
      New Post
    </button>
	<% end %>

	<% @posts.each do | post | %>
  	<%= link_to user_post_path(:id => post.id), class: 'link-post-post' do %>

			<div class="post-container" >
    		<h3 class="post-title"><%= post.title %></h3>
  			<p class="post-text"><%= post.text.slice(0, 150) %><span class="read-more"><strong>...&nbsp;[read more]</strong></span></p>
  			<aside class="comment-like">
    			<span class="comments">Comments: <%= post.comments_counter %></span>
    			<span class="likes">
      			<%= post.likes_counter %>
    			</span>
    				
					<button class="like-btn">
    				<%= " â™¥  "%>
					</button>

  			<aside>
			</div>

  	<% end %>

		<div class="post-comment">
			<p><u><strong>Comments:</strong></u></p>
			<% post.recents_comments.reverse.each do |comment| %>
				<p>
        	<span><strong><%= comment.author.name %>:</strong></span>
        	<span><em><%= comment.text %></em></span>
				</p>
    	<% end %>
		</div>

	<% end %>
</section>